@page
@model MegaDesk30.Pages.DeskQuotes.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>
<form>
    <p>
        Customer Name: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].rushDays)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].customerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].quoteDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].shippingCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeskQuote[0].deskPrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeskQuote) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.rushDays)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.customerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quoteDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.shippingCost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.deskPrice)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
